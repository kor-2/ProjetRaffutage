{% extends '@EasyAdmin/layout.html.twig' %}
{% block head %}
    
{% endblock %}


{% block content %}

<div>
    <h1>Modification de la commande numéro: {{ commande.facture }}</h1>
    

    <form action="{{ path('admin_modif_cmd_proc', { 'id_cmd' : commande.id , 
                                                    'id_user' : commande.user.id,
                                                    'id_presta' : commande.prestation.id,
                                                    'id_fact' : commande.facture.id }) }}" 
                                                    method="post">  

        

        {% set i = 0 %}
        {% for detail in commande.details %}
        
        {% set i = i + 1 %}
        <div>

            <label for="type">Type de couteau ({{ detail.tarif }} €/u)
                <input type="text" name="type{{ i }}" value="{{ detail.type }}">
            </label>
            
            <input type="hidden" name="tarif{{ i }}" value="{{ detail.tarif }}">

            <label for="nbCouteau">Nombre de couteau
                <input type="number" name="nbCouteau{{ i }}" value="{{ detail.nbCouteau }}">
            </label>

            <label for="nbCouteau">Remise (%)
                <input type="number" min="0" max="100" name="remise{{ i }}" value="{{ detail.remise }}">
            </label>
        </div>
        {% endfor %}

        <button type="submit" class="btn btn-primary mt-4">Modifier</button>

    </form>


</div>
    
{% endblock %}